---
import '../styles/global.scss';
import packJson from '../../package.json';

import EBPM from '../components/EBPM';
import NJSCalculator from '../components/NJSCalculator';
import ScoreCalculator from '../components/ScoreCalculator';
import SPSDifference from '../components/SPSDifference';
import DifficultyLabel from '../components/DifficultyLabel';
import ColorPicker from '../components/ColorPicker';
import RandomPatternGenerator from '../components/RandomPatternGenerator';

const title = 'BS Mapping Utility';
const description = "Plenty o' utilities for Beat Saber mapping";
const permalink = 'https://kivalevan.me/BeatSaber-MappingUtility/';

const watermark = '@kivalevan';
const version = 'pre-' + packJson.version + 'a';
---

<html lang="en">
   <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width" />
      <meta name="theme-color" content="#ee0000" />
      <link rel="shortcut icon" type="image/png" href="/assets/favicon.png" />
      <link href="https://fonts.googleapis.com/css?family=Teko" rel="stylesheet" />
      <meta name="generator" content={Astro.generator} />

      <!-- Primary Meta Tags -->
      <title>{title}</title>
      <meta name="title" content={title} />
      <meta name="description" content={description} />

      <!-- Open Graph / Facebook -->
      <meta property="og:type" content="website" />
      <meta property="og:url" content={permalink} />
      <meta property="og:title" content={title} />
      <meta property="og:description" content={description} />
      <meta property="og:image" content="/assets/favicon.png" />

      <!-- Twitter -->
      <meta property="twitter:card" content="summary" />
      <meta property="twitter:url" content={permalink} />
      <meta property="twitter:title" content={title} />
      <meta property="twitter:description" content={description} />
      <meta property="twitter:image" content="/assets/favicon.png" />
   </head>
   <body>
      <main>
         <h1>Beat Saber Mapping Utility</h1>
         <noscript>This a web-app, Javascript is required for the Mapping Utility to work.</noscript
         >
         <hr />
         <div class="subpanel-right">
            <a href="https://kivalevan.github.io/">{watermark}</a> | <a
               href="https://github.com/KivalEvan/BeatSaber-MappingUtility/blob/main/CHANGELOG.md"
               >{version}</a
            >
         </div>
         <div class="wrapper">
            <nav class="wrapper-sidenav">
               <div class="panel-sidenav">
                  <div><a href="#map-settings">Map Settings</a></div>
                  <div><a href="#ebpm-precision">EBPM & Precision</a></div>
                  <div><a href="#njs-calculator">NJS Calculator</a></div>
                  <div><a href="#score-calculator">Score Calculator</a></div>
                  <div><a href="#sps-difference">SPS Difference</a></div>
                  <div><a href="#difficulty-label">Difficulty Label</a></div>
                  <div><a href="#color-picker">Color Picker</a></div>
                  <div><a href="#random-pattern">Random Pattern Generator</a></div>
               </div>
            </nav>
            <hr />
            <EBPM client:load />
            <hr />
            <NJSCalculator client:load />
            <hr />
            <ScoreCalculator client:load />
            <hr />
            <SPSDifference client:load />
            <hr />
            <DifficultyLabel client:load />
            <hr />
            <ColorPicker client:load />
            <hr />
            <RandomPatternGenerator client:load />
         </div>
         <br />
         <hr />
         <div class="subpanel-right">
            <a class="text-watermark" href="https://kivalevan.github.io/">{watermark}</a> | <a
               class="text-version"
               href="https://github.com/KivalEvan/BeatSaber-MappingUtility/blob/main/CHANGELOG.md"
               >{version}</a
            >
         </div>
      </main>
   </body>
</html>
